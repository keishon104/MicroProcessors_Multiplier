#include <msp430.h> 
#include <stdio.h>



int main()
{
  WDTCTL = WDTPW+WDTHOLD;                   // Stop WDT (DO NOT CHANGE)
  Integer();

  return 0;
}






int Integer(){

    int n, c, k;
    int arr[15];
    int i = 0;
    n = 100;
    printf("Enter an integer in decimal number system\n");
    scanf("%d", &n);

    printf("%d in binary number system is:\n", n);

    for (c = 15; c >= 0; c--)
    {

      k = n >> c;

      if (k & 1){
        printf("1");
        arr[c]= 1;
      }
      else {
        printf("0");
        arr[c]= 0;
      }
      i++;
    }
    arr[0] = 12;
    printf("\n");
//    printf("%d", arr[c]);
    printf("%d", i);


//
//    int ToString = 368;
//    char str[12];
//    sprintf(str, "%d", ToString );
}
